                                <Canvas fx:id="field" height="1000.0" layoutY="15.0" width="1500.0"/>
                            </children>
                        </AnchorPane>
                    </content>
                </ScrollPane>
                <AnchorPane maxWidth="220.0" minWidth="0.0" prefHeight="851.0" prefWidth="345.0">
