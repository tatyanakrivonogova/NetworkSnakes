                        <Label alignment="CENTER" layoutX="14.0" layoutY="14.0" minWidth="60.0" prefWidth="-1.0"
                               style="&#10;" text="Active games" textAlignment="CENTER" wrapText="false">
                            <font>
                                <Font size="18.0" fx:id="x1"/>
                            </font>
                            <textFill>
                                <Color red="0.624" green="0.624" blue="0.624" fx:id="x2"/>
                            </textFill>
                        </Label>
                        <ListView fx:id="mastersList" layoutX="14.0" layoutY="44.0" maxWidth="-Infinity" minWidth="0.0"
                                  prefHeight="382.0" prefWidth="340.0"/>
